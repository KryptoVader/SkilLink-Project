<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkillLink Dashboard</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="container">
        <nav>
            <div class="nav-content">
                <div class="logo">SkilLink</div>
                <div class="nav-links">
                    <a href="/" id="home-link" title="Home">Home</a>
                    <a href="/mentors" id="mentor-link" title="Mentors">Mentors</a>
                    <a href="/projects" id="projects-link" title="Projects">Projects</a>
                    <a href="/profile" id="profile-link" title="Profile">Profile</a>
                    <a href="/logout" id="logout-btn" title="Logout">Logout</a>
                </div>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <section class="content">
                <h1>Welcome, <%= user.name %>!</h1>
                <div class="recommendations">
                    <h2>Recommendations</h2>
                    <ul>
                        <% recommendations.forEach(rec => { %>
                            <li>
                                <a href="<%= rec.link %>"><strong><%= rec.name %></strong></a>
                                <p><%= rec.description %></p>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </section>
        </main>
    </div>
</body>
</html>
