<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="/css/signup.css">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="sign-up">
            <h2>Sign Up</h2>
            <form action="/add-user" method="post">
                <input type="hidden" name="signup" value="true">
                <fieldset>
                    <input type="text" name="name" placeholder="Username" required autocomplete="on"><br>
                    <input type="email" name="email" placeholder="Email" autocomplete="on" required><br>
                    <input type="password" name="password" placeholder="Password" minlength="8" required><br>
                    <br>
                    <button type="submit">Sign Up</button>
                </fieldset>
            </form>
        </div>

        <div class="sign-in">
            <h2>Sign In</h2>
            <form action="/user" method="post" id="sign-in-form">
                <fieldset>
                    <input type="text" name="name" placeholder="Username" required autocomplete="on"><br>
                    <input type="password" name="password" placeholder="Password" required minlength="8"
                        autocomplete="on"><br>
                    <button type="submit">Sign In</button>
                </fieldset>
            </form>

            <div class="divider">
                <span>OR</span>
            </div>

            <div class="google-login">
                <button class="google-sign-in">
                    <a href="/auth/google/signin">Sign in With Google</a>
                </button>
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="100" height="100" viewBox="0 0 30 30">
                    <path d="M 15.003906 3 C 8.3749062 3 3 8.373 3 15 C 3 21.627 8.3749062 27 15.003906 27 C 25.013906 27 27.269078 17.707 26.330078 13 L 25 13 L 22.732422 13 L 15 13 L 15 17 L 22.738281 17 C 21.848702 20.448251 18.725955 23 15 23 C 10.582 23 7 19.418 7 15 C 7 10.582 10.582 7 15 7 C 17.009 7 18.839141 7.74575 20.244141 8.96875 L 23.085938 6.1289062 C 20.951937 4.1849063 18.116906 3 15.003906 3 z"></path>
                </svg>
            </div>
            
        </div>

        <div class="overlay-container">
            <div class="overlay">
                <h2>New to us?</h2>
                <p>Join us on your new journey</p>
                <button type="button" id="toggle-overlay">Sign Up</button>
            </div>
        </div>
    </div>

    <script>
        const overlayContainer = document.querySelector('.overlay-container');
        const toggleButton = document.getElementById('toggle-overlay');
        const overlayHeading = document.querySelector('.overlay h2');
        const overlayParagraph = document.querySelector('.overlay p');
        let isSignUpMode = true;

        toggleButton.addEventListener('click', () => {
            overlayContainer.classList.toggle('active');
            if (isSignUpMode) {
                overlayHeading.textContent = "Already have an account?";
                overlayParagraph.textContent = "Let's get you signed in!";
                toggleButton.textContent = "Sign In";
            } else {
                overlayHeading.textContent = "New to us?";
                overlayParagraph.textContent = "Join us on your new journey";
                toggleButton.textContent = "Sign Up";
            }
            isSignUpMode = !isSignUpMode;
        });
    </script>
</body>

</html>